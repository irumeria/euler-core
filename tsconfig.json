{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "rootDir": "src",
      "outDir": "dist",
      "noImplicitAny": false,
      "removeComments": true,
      "isolatedModules": true,
      "module": "esnext",
      "lib": ["ES2019","dom"],
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules/**/*", "dist/**/*"]
  }